<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="358dp"
        android:layout_marginBottom="670dp"
        android:rotation="180"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/main_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="663dp"
        android:text="네트워크 설정"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittext_serverip"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="497dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="  IP"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext_serverport"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="417dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="  PORT"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/submitPref_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/border_button"
        android:text="등록"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>