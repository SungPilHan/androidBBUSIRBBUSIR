<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="358dp"
        android:layout_marginBottom="670dp"
        android:rotation="180"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/main_transfer"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="667dp"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="367dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="670dp"
        app:srcCompat="@drawable/menu" />

    <EditText
        android:id="@+id/textView_Username"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="516dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="   jack"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_newPassword"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="436dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  비밀번호를 입력해주세요"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="355dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  비밀번호를 한번 더 입력해주세요"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_newPasswordSubmit"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/border_button"
        android:text="등록"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>