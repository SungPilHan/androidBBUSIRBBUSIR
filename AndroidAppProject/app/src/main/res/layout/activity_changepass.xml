<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/changepasswd_back"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="354dp"
        android:layout_marginBottom="669dp"
        android:layout_marginRight="354dp"
        android:rotation="180"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/main_transfer"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="667dp"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editText_Username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="    jack"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_newPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="436dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint=" 비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="355dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint=" 비밀번호를 한 번 더 입력해 주세요"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_newPasswordSubmit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/border_button"
        android:text="비밀번호 변경"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>